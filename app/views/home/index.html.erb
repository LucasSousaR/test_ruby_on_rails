<p style="color: green"><%= notice %></p>
<style>
    .input_width {
        width: 100%;
    }
</style>


<div data-controller="context-menu" class="container mt-5">

  <div class="card card-default">
    <div class="card-body">
      <H2> Dashboard </H2>
      <hr class="d-print-none">
      <div class="col-12">
        <div class="box">
          <div class="box-body d-flex justify-content-between pt-0 pb-0">
            <div class="search-form ">
              <%= search_form_for @q, url: {  } do |f| %>
                <h4> Pesquisa por Municipio</h4>
                <div class="form-group">
                  <select class="form-control" id="id_eq" name="id_eq">
                    <option selected>Selecione o Municipio</option>
                    <%  Municipio.all.each do |municipio|%>
                      <option value="<%=municipio.id %>"><%=municipio.nome %></option>
                    <%end %>
                  </select>

                  <%= f.submit "Buscar", class: "btn btn-success" %>
                </div>

              <%end %>


            </div>

          </div>

        </div>
      </div>


    </div>
  </div>



  <br>

  <div class="card card-default">
    <div class="card-body">
      <%if @items.present?  %>
        <table class="table table-vcenter text-nowrap table-bordered dataTable no-footer" id="task-profile" role="grid">
          <thead>
          <tr class="top">
            <th class="border-bottom-0 text-center sorting fs-14 font-w500" tabindex="0" aria-controls="task-profile" rowspan="1" colspan="1" style="width: 26.6562px;">No</th>
            <th class="border-bottom-0 sorting fs-14 font-w500" tabindex="0" aria-controls="task-profile" rowspan="1" colspan="1" >nome_completo</th>
            <th class="border-bottom-0 sorting fs-14 font-w500" tabindex="0" aria-controls="task-profile" rowspan="1" colspan="1" >cpf</th>
            <th class="border-bottom-0 sorting fs-14 font-w500" tabindex="0" aria-controls="task-profile" rowspan="1" colspan="1" >email</th>
            <th class="border-bottom-0 sorting fs-14 font-w500" tabindex="0" aria-controls="task-profile" rowspan="1" colspan="1" >status</th>
            <th colspan="2" class="border-bottom-0 sorting fs-14 font-w500" tabindex="0" aria-controls="task-profile" rowspan="2" >Ação</th>
          </tr>
          </thead>
          <tbody>

          <% @items.each do |item|  %>
            <tr class="odd">
              <td class="text-center"><%= item.id %></td>
              <td>
                <span><%= item.nome_completo %></span>
              </td>
              <td>
                <span><%= item.cpf %></span>
              </td>
              <td>
                <span><%= item.email %></span>
              </td>
              <td>
                <% if item.status == true%>
                  p> Ativo</p>
                <%else %>
                  <p> Inativo</p>
                <%end %>
              </td>

              <td><%= link_to 'Edit', edit_municipe_path(item) %></td>
            </tr>
          <% end %>


          </tbody>
        </table>
      <%else %>
        <div> Nenhum resultado</div>

      <% end %>
    </div>
  </div>


</div>
